{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "rootDirs": [
            "packages"
        ],
        "lib": [
            "es6",
            "dom",
            "es2015",
            "es2016",
            "es2020",
        ],
        "types": [
            "jest",
            "node"
        ],
    },
    "include": [
        "./types.d.ts",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.test.ts",
    ]
}